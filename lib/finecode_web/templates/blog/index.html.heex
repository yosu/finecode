<section>
  <div class="container">
    <h2>Posts</h2>
    <%= for post <- @posts do %>
    <div class="row">
      <div class="column">
        <article class="post-list-item">
          <h3><%= link(post.title, to: Routes.blog_path(@conn, :show, post.id)) %></h3>
          <p><%= post.date %></p>
          <p><%= post.description %></p>
        </article>
      </div>
    </div>
    <% end %>
  </div>
</section>
